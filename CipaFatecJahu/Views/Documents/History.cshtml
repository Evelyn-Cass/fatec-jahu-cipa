@model IEnumerable<CipaFatecJahu.Models.Document>

@{
    ViewData["Title"] = "Histórico";
}
@section Styles {
<link rel="stylesheet" href="~/css/Documents/history.css" />
<link rel="stylesheet" href="~/css/table.css" />
<link rel="stylesheet" href="~/css/switch.css" />
}
<div class="container-title">
    <h1 class="title">Histórico</h1>
    @{
        @if (TempData["message"] != null)
        {
            <div class="alert-green">
                @TempData["message"]
            </div>
            TempData.Remove("message");
        }
    }
    <div class="btn-create-border">
        <a asp-action="Create" class="btn-create">🞢</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaterialId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MandateId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attachment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentCreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            @if (User.IsInRole("Administrador"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
            }
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.MandateId == null)
                    {
                        <text>Nenhum</text>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.MandateId)
                    }
                </td>
                <td>
                    <a href="~/@item.Attachment" target="_blank">Visualizar PDF</a>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentCreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                @if (User.IsInRole("Administrador")){
                    <td>
                        <label class="switch">
                            <input type="checkbox"
                            data-id="@item.Id"
                            data-status="@item.Status"
                            @if (item.Status == "Ativo")
                            {
                                <text>checked</text>
                            }
                            onchange="onStatusChange(this)" />
                            <span class="slider round"></span>
                        </label>
                    </td>
                }
                <td>
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="AtaEdit" asp-route-id="@item.Id">Editar</a>
                        <span>|</span>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="~/js/Documents/history.js"></script>
}