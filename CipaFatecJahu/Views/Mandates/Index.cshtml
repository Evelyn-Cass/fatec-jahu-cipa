@model IEnumerable<CipaFatecJahu.Models.Mandate>

@{
    ViewData["Title"] = "Histórico de Gestões";
}
@section Styles {
<link rel="stylesheet" href="~/css/Documents/history.css" />
    <link rel="stylesheet" href="~/css/table.css" />
    <link rel="stylesheet" href="~/css/switch.css" />
}

<div class="container-title" style="width:50%">
    <h1 class="title">Histórico de Gestões</h1>
    @{
        @if (TempData["message"] != null)
        {
            <div class="alert-green">
                @TempData["message"]
            </div>
            TempData.Remove("message");
        }
    }
    <div class="btn-create-border">
        <a asp-action="Create" class="btn-create">🞢</a>
    </div>
</div>
<table class="table" style="width:50%">
    <thead>
        <tr>
            <th style="width:20%">
                @Html.DisplayNameFor(model => model.StartYear)
            </th>
            <th style="width:20%">
                @Html.DisplayNameFor(model => model.TerminationYear)
            </th>
            <th style="width:20%">
                @Html.DisplayNameFor(model => model.DocumentCreationDate)
            </th>
            <th style="width:40%">
                @Html.DisplayNameFor(model => model.UserId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.StartYear)
                </td>
                <td>
                    @Html.DisplayFor(model => item.TerminationYear)
                </td>
                <td>
                    @Html.DisplayFor(model => item.DocumentCreationDate)
                </td>
                <td>
                    @Html.DisplayFor(model => item.UserId)
                </td>
            </tr>
        }
    </tbody>
</table>