@model CipaFatecJahu.Models.User;
@{
    ViewData["Title"] = "Alterar Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/form.css" />
}

<section class="mainbody">
    <div class="form-geral">
        <form class="form-base" method="post" asp-action="ChangePassword">
            <div class="form-header">
                <h1>Alterar Senha</h1>
            </div>
            <div class="form-body secretary">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Name" class="form-control" hidden />
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" hidden />
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="control-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label fw-bold fs-4"></label>
                    <input asp-for="ConfirmPassword" name="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="control-danger"></span>
                </div>

                <div class="btn-container">
                    <input type="submit" class="button-green button-create">
                </div>
            </div>
        </form>
    </div>

</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
